<body>
    <div class="full-page">
        <div class="container-login">

            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
            {
                <fieldset style="margin:auto; padding:initial">
                    <br />

                    <div class="image" style="background-image: url(../../img/Login7.jpg); height:200px">
                        <span class="image-text">
                            Sign In
                        </span>
                    </div>

                    <br /><br />
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <form @*class="form"*@ style="border-style:dashed;border-width:2px;border-color:white; background-color: #fff;">
                        <div class="validate-input">
                            @Html.LabelFor(a => a.UserName, "Username", new { @class = "login-label" })
                            @Html.TextBoxFor(a => a.UserName, new { @placeholder = "Enter Username", @class = "loginInput" })
                            <span class="focus-input100"></span>
                            @Html.ValidationMessageFor(a => a.UserName)
                            
                        </div>
                        <br />
                        <div class="form-group form-group-lg validate-input">
                            @Html.LabelFor(a => a.Password, "Password", new { @class = "login-label" })
                            @Html.PasswordFor(a => a.Password, new { @placeholder = "Enter Password", @class = "loginInput" })
                             <span class="focus-input100"></span>
                            @Html.ValidationMessageFor(a => a.Password)
                        </div>

                        @ViewBag.Message
                        <br />
                        <label class="checkbox">
                            <input type="checkbox" value="remember-me"> Remember me
                        </label>
                        <br />
                        <div class="container-login100-form-btn">
                            <button class="login100-form-btn" type="submit">SIGN IN</button>
                        </div>
                       

                    </form>

                </fieldset>
            }
        </div>
