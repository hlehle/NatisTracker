@model NatisTracker.ViewModels.MasterViewModel

<!DOCTYPE html>
@{
    ViewBag.Title = "AdminView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Admin View &middot; FindMy Natis</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <style type="text/css">
        ul {
            list-style-type: none;
        }

        #myTab ul {
            display: none;
        }

        #myTab li:hover > ul {
            display: block;
        }

        .container {
            height: 100%;
            padding: 5px 5px 5px 5px;
            margin-left: 1%;
            margin-right: 1%;
            width: 98%;
        }
    </style>

</head>

<body>
    <div class="container">
        <ul class="nav nav-tabs nav-pills" data-tabs="tabs" id="myTab">
            <li class="active"><a data-toggle="tab" href="#Menu">Menu</a></li>
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown">Deliveries<span class="caret"></span></a>
                <ul class="dropdown-menu" data-toggle="tabs" id="mySubTab">
                    <li><a data-toggle="tab" href="#Courier">Sent By Courier</a></li>
                    <li><a data-toggle="tab" href="#Driver">Sent By Driver</a></li>
                </ul>
            </li>
            <li><a data-toggle="tab" href="#Search">Search Natis</a></li>
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown">View Department <span class="caret"></span></a>
                <ul class="dropdown-menu" data-tabs="tabs" id="mySubTab">
                    <li><a data-toggle="tab" href="#Maturities">Maturities</a></li>
                    <li><a data-toggle="tab" href="#Legal">Legal</a></li>
                    <li><a data-toggle="tab" href="#Call_Centre">Call Centre</a></li>
                </ul>
            </li>
            <li><a data-toggle="tab" href="#logs">Tracking and Reports</a></li>
            <li><a data-toggle="tab" href="#requested">Requests</a></li>
        </ul>

        <div class="tab-content">
            <div id="Menu" class="tab-pane fade in active">

                <ul class="list-item">
                    <li class="list-group-item"> <a href="@Url.Action("LoadNewNatis", "Process")" class="btn btn-block">Scan To Safe</a></li>
                    <li class="list-group-item"> <a href="@Url.Action("GenerateReports", "Process")" class="btn btn-block">Generate Report</a></li>
                    <li class="list-group-item"> <a href="@Url.Action("RequestResponse", "Process")" class="btn btn-block">Respond to Request</a></li>
                    @*<li class="list-group-item"> <a href="@Url.Action("Scan_Back_To_Safe", "Process")" class="btn btn-block">Scan Back to Safe</a></li>*@
                    <li class="list-group-item"> <a href="#" class="btn btn-block">Escalations</a></li>
                </ul>


            </div>

            <div id="Courier" class="tab-pane fade in">
                <div class="table-responsive table table-striped">
                    <h3>Sent By Courier Response Table</h3>
                    <br /><br />
                    @if (Model.deliveryModel != null)
                    {
                        <table class="table-responsive table-bordered">
                            <thead>
                                <tr>
                                    <th>Dealership Name</th>
                                    <th>Contract Numbers</th>
                                    <th>Waybill Number</th>
                                    <th>Item Sent</th>
                                    <th>Package Sender</th>
                                    <th>Date Sent</th>
                                    <th>Package Recipient</th>
                                    <th>Date Recieved</th>
                                    <th>Delivery Status</th>
                                    <th>Comment</th>
                                </tr>
                            </thead>

                            @foreach (var deliveryInfo in Model.deliveryModel)
                            {
                                if (deliveryInfo.DeliveryChoice == "Courier")
                                {
                                    <tbody>
                                        <tr>
                                            <td>@deliveryInfo.DealershipName</td>
                                            <td>
                                                @foreach (var contracts in Model.contracts)
                                                {
                                                    if (deliveryInfo.RecordNumber.Equals(contracts.RecordNumber))
                                                    {
                                                        <div class="checkbox">
                                                            @if (contracts.IsReceived)
                                                            {
                                                                @Html.CheckBox("checkbox", new { @checked = "checked", @disabled = "true" }) @contracts.ContractNumber1 <br />
                                                            }
                                                            else
                                                            {
                                                                @Html.CheckBox("checkbox", new { @disabled = "true" }) @contracts.ContractNumber1 <br />
                                                            }
                                                        </div>

                                                    }
                                                }
                                            </td>
                                            <td>@deliveryInfo.PackageNumber</td>
                                            <td>@deliveryInfo.Quantity</td>
                                            <td>@deliveryInfo.PackageSender</td>
                                            <td>@deliveryInfo.DateSent</td>
                                            <td>@deliveryInfo.PackageRecipient</td>
                                            <td>@deliveryInfo.DateReceived</td>
                                            <td>@deliveryInfo.CourierStatus</td>
                                            <td>@deliveryInfo.Comment</td>
                                        </tr>
                                    </tbody>
                                }

                            }

                        </table>
                    }

                </div>
            </div>

            <div id="Driver" class="tab-pane fade in">
                <div class="table-responsive table table-striped">

                    <h3>Sent By Driver Response Table</h3>
                    <br /><br />

                    @if (Model.deliveryModel != null)
                    {

                        <table class="table-responsive">
                            <thead>
                                <tr>
                                    <th>Dealership Name</th>
                                    <th>Contract Numbers</th>
                                    <th>Drivers Details</th>
                                    <th>Drivers Contacts</th>
                                    <th>Item Sent</th>
                                    <th>Package Sender</th>
                                    <th>Date Sent</th>
                                    <th>Package Recipient</th>
                                    <th>Date Recieved</th>
                                    <th>Delivery Status</th>
                                    <th>Comment</th>
                                </tr>
                            </thead>

                            @foreach (var deliveryInfo in Model.deliveryModel)
                            {
                                if (deliveryInfo.DeliveryChoice == "Driver")
                                {
                                    <tbody>
                                        <tr>
                                            <td>
                                                @Html.Hidden("RecordNumber", @deliveryInfo.RecordNumber.ToString())
                                                @deliveryInfo.DealershipName
                                            </td>
                                            <td>
                                                @foreach (var contracts in Model.contracts)
                                                {
                                                    if (deliveryInfo.RecordNumber.Equals(contracts.RecordNumber))
                                                    {
                                                        <div class="checkbox">
                                                            @if (contracts.IsReceived)
                                                            {
                                                                @Html.CheckBox("checkbox", new { @checked = "checked", @disabled = "true" }) @contracts.ContractNumber1 <br />
                                                            }
                                                            else
                                                            {
                                                                @Html.CheckBox("checkbox", new { @disabled = "true" }) @contracts.ContractNumber1 <br />
                                                            }
                                                        </div>
                                                    }
                                                }
                                            </td>
                                            <td>@deliveryInfo.DriverDetails</td>
                                            <td>@deliveryInfo.DriverContact</td>
                                            <td>@deliveryInfo.Quantity</td>
                                            <td>@deliveryInfo.PackageSender</td>
                                            <td>@deliveryInfo.DateSent</td>
                                            <td>@deliveryInfo.PackageRecipient</td>
                                            <td>@deliveryInfo.DateReceived</td>
                                            <td>@deliveryInfo.CourierStatus</td>
                                            <td>@deliveryInfo.Comment</td>
                                        </tr>
                                    </tbody>
                                }

                            }

                        </table>
                    }

                </div>
            </div>

            <div id="Search" class="tab-pane fade in">                
                <div class="table-responsive">
                    <table id="searchTable" class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Date Scanned</th>
                                <th>Contract Numbers</th>
                                <th>VIN Number</th>
                                <th>Registration Number</th>
                                <th>Engine Number</th>
                                <th>Car Make</th>
                                <th>Series Number</th>
                                <th>Description</th>
                                <th>Registration Date</th>
                                <th>Owner name</th>
                                <th>Owner ID</th>
                                <th>Natis Location</th>
                                <th>Contract Status</th>
                                <th>Status Description</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.natisDataViewModel)
                            {

                                <tr>
                                    <td>@item.DateLoaded</td>
                                    <td>
                                        @for (int i = 0; i < Model.contractData.Count(); i++)
                                        {
                                            if (Model.contractData[i].VinNumber.Equals(item.VinNumber))
                                            {
                                                @Model.contractData[i].ContractNumber
                                            }

                                        }
                                    </td>
                                    <td>@item.VinNumber</td>
                                    <td>@item.RegistrationNumber</td>
                                    <td>@item.EngineNumber</td>
                                    <td>@item.CarMake</td>
                                    <td>@item.SeriesNumber</td>
                                    <td>@item.Description</td>
                                    <td>@item.RegistrationDate</td>
                                    <td>@item.OwnerName</td>
                                    <td>@item.OwnerIdentityNumber</td>
                                    <td>@item.NatisLocation</td>
                                    <td>
                                        @for (int i = 0; i < Model.contractData.Count(); i++)
                                        {
                                            if (Model.contractData[i].VinNumber.Equals(item.VinNumber))
                                            {
                                                @Model.contractData[i].ContractStatus
                                            }
                                        }
                                    </td>
                                    <td>
                                        @for (int i = 0; i < Model.contractData.Count(); i++)
                                        {
                                            if (Model.contractData[i].VinNumber.Equals(item.VinNumber))
                                            {
                                                @Model.contractData[i].StatusDescription
                                            }
                                        }
                                    </td>
                                </tr>

                            }
                        </tbody>

                        <tfoot class="thead-dark">
                            <tr>
                                <th>Date Scanned</th>
                                <th>Contract Numbers</th>
                                <th>VIN Number</th>
                                <th>Registration Number</th>
                                <th>Engine Number</th>
                                <th>Car Make</th>
                                <th>Series Number</th>
                                <th>Description</th>
                                <th>Registration Date</th>
                                <th>Owner name</th>
                                <th>Owner ID</th>
                                <th>Natis Location</th>
                                <th>Contract Status</th>
                                <th>Status Description</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <div id="Maturities" class="tab-pane fade in">
                <h3>Natis In Maturities</h3><br /><br />
                @if (Model.maturitiesViewModel != null)
                {
                <div class="table-responsive table table-striped">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>VIN Number</th>
                                <th>Registration Number</th>
                                <th>Engine Number</th>
                                <th>Car Make</th>
                                <th>Series Number</th>
                                <th>Description</th>
                                <th>Registration Date</th>
                                <th>Owner name</th>
                                <th>Owner ID</th>
                                <th>Natis Location</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model.maturitiesViewModel)
                            {
                            <tbody>
                                <tr>
                                    <td>@item.VinNumber</td>
                                    <td>@item.RegistrationNumber</td>
                                    <td>@item.EngineNumber</td>
                                    <td>@item.CarMake</td>
                                    <td>@item.SeriesNumber</td>
                                    <td>@item.Description</td>
                                    <td>@item.RegistrationDate</td>
                                    <td>@item.OwnerName</td>
                                    <td>@item.OwnerIdentityNumber</td>
                                    <td>@item.NatisLocation</td>
                                </tr>
                            </tbody>
                            }
                    </table>
                </div>
                }


            </div>

            <div id="Legal" class="tab-pane fade in">
                <h3>Natis In Legal</h3><br /><br />
                @if (Model.legalViewModel != null)
                {
                <div class="table-responsive table table-striped">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>VIN Number</th>
                                <th>Registration Number</th>
                                <th>Engine Number</th>
                                <th>Car Make</th>
                                <th>Series Number</th>
                                <th>Description</th>
                                <th>Registration Date</th>
                                <th>Owner name</th>
                                <th>Owner ID</th>
                                <th>Natis Location</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model.legalViewModel)
                            {
                            <tbody>
                                <tr>
                                    <td>@item.VinNumber</td>
                                    <td>@item.RegistrationNumber</td>
                                    <td>@item.EngineNumber</td>
                                    <td>@item.CarMake</td>
                                    <td>@item.SeriesNumber</td>
                                    <td>@item.Description</td>
                                    <td>@item.RegistrationDate</td>
                                    <td>@item.OwnerName</td>
                                    <td>@item.OwnerIdentityNumber</td>
                                    <td>@item.NatisLocation</td>
                                </tr>
                            </tbody>
                            }
                    </table>
                </div>
                }


            </div>

            <div id="Call_Centre" class="tab-pane fade in">
                <h3>Natis In Call Centre</h3><br /><br />
                @if (Model.callCentreViewModel != null)
                {
                <div class="table-responsive table table-striped">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>VIN Number</th>
                                <th>Registration Number</th>
                                <th>Engine Number</th>
                                <th>Car Make</th>
                                <th>Series Number</th>
                                <th>Description</th>
                                <th>Registration Date</th>
                                <th>Owner name</th>
                                <th>Owner ID</th>
                                <th>Natis Location</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model.callCentreViewModel)
                            {
                        <tbody>
                            <tr>
                                <td>@item.VinNumber</td>
                                <td>@item.RegistrationNumber</td>
                                <td>@item.EngineNumber</td>
                                <td>@item.CarMake</td>
                                <td>@item.SeriesNumber</td>
                                <td>@item.Description</td>
                                <td>@item.RegistrationDate</td>
                                <td>@item.OwnerName</td>
                                <td>@item.OwnerIdentityNumber</td>
                                <td>@item.NatisLocation</td>
                            </tr>
                        </tbody>
                            }
                    </table>
                </div>
                }


            </div>

            <div id="logs" class="tab-pane fade in">
                @if (Model.logs != null)
                {
                    <div class="table-responsive table table-striped">
                        <table id="LogTable" class="table">
                            <thead>
                                <tr>
                                    <th>Contract Number</th>
                                    <th>VIN Number</th>
                                    <th>Date Scanned</th>
                                    <th>Scanned By</th>
                                    <th>Natis Location</th>
                                    <th>Contract Status</th>
                                    <th>Contract Description</th>
                                    <th>Comment</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.logs)
                                {

                                    <tr>
                                        <td>@item.ContractNumber</td>
                                        <td>@item.VinNumber</td>
                                        <td>@item.DateScanned</td>
                                        <td>@item.User</td>
                                        <td>@item.Department</td>
                                        <td>@item.ContractStatus</td>
                                        <td>@item.ContractDescription</td>
                                        <td>@item.Comment</td>
                                    </tr>

                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Contract Number</th>
                                    <th>VIN Number</th>
                                    <th>Date Scanned</th>
                                    <th>Scanned By</th>
                                    <th>Natis Location</th>
                                    <th>Contract Status</th>
                                    <th>Contract Description</th>
                                    <th>Comment</th>
                                </tr>
                            </tfoot>
                        </table>

                    </div>

                    using (Html.BeginForm("GenerateReports", "Process", FormMethod.Post, new { @class= "btn-group", @style = "padding:10px 100px 10px 0px" }))
                    {
                        
                        <button class="btn btn-large btn-primary" type="submit">Audit Report</button>
                    }

                    using (Html.BeginForm("GenerateReports", "Process", FormMethod.Post, new { @class = "btn-group", @style = "padding:10px 10px 10px 100px" }))
                    {
                        <div class="form-group">
                            @Html.Label("Contract Number or VIN", new { @class = "col-md-4 control-label", @style="padding:5px 0px 0px 0px"})
                            <div class="col-md-8">
                                @Html.TextBox("a")

                                <button class="btn btn-large btn-primary" type="submit">Generate</button>
                            </div>
                        </div>
                    }

                    using (Html.BeginForm("GenerateReports", "Process", FormMethod.Post, new { @class = "btn-group", @style = "padding:10px 0px 10px 10px" }))
                    {
                        <div class="form-group">
                            @Html.Label("Select Department", new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.DropDownList("b", new List<SelectListItem>
                                {
                                    new SelectListItem { Text="Maturities", Value = "Maturities"},
                                    new SelectListItem { Text="Legal", Value = "Legal"},
                                }, "---Select one---", new { @style="padding:0px 30px 0px 30px"})

                                <button class="btn btn-large btn-primary" type="submit">Department Report</button>
                            </div>
                        </div>
                    }
                }

            </div>

            <div id="requested" class="tab-pane fade in">
                <h3>Approved Requests</h3><br /><br />
                @if (Model.RequestViewModel != null)
                {
                <div class="table-responsive table table-striped">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Request Status</th>
                                <th>Request Date</th>
                                <th>Contract Number</th>
                                <th>Reply Date</th>
                                <th>Responder Name</th>
                            </tr>
                        </thead>
                        @if (Model.RequestViewModel != null)
                            {
                                foreach (var Requests in Model.RequestViewModel)
                                {
                        <tbody>
                            <tr>
                                <td>@Requests.RequestStatus</td>
                                <td>@Requests.RequestDate </td>
                                <td>@Requests.ContractNo</td>
                                <td>@Requests.ReplyDate</td>
                                <td>@Requests.Responder</td>
                            </tr>
                        </tbody>
                                }
                            }
                    </table>
                </div>

                }


            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.bootstrap.min.js"></script>

    <script type="text/javascript" class="init">
        $(document).ready(function () {
            $('#searchTable').DataTable();
            $('#LogTable').DataTable();
            
        });

    </script>


</body>

</html>