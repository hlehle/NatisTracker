@model NatisTracker.ViewModels.MasterViewModel

<!DOCTYPE html>
@{
    ViewBag.Title = "DealershipView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<script type="text/javascript">
    $(function () {
        $('.date-picker').datepicker();
    });

</script>


<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Dealership &middot; FindMy Natis</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">


    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

    <link rel="stylesheet" href="/resources/demos/style.css">

    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>

    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <!-- Le styles -->

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style type="text/css">
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>


    <link href="~/Content/bootstrap-responsive.css" rel="stylesheet" />

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="../assets/js/html5shiv.js"></script>
    <![endif]-->
    <!-- Fav and touch icons -->
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="icon/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="icon/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="icon/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="icon/apple-touch-icon-57-precomposed.png">
    <link rel="shortcut icon" href="icon/favicon.png">
</head>

<body>

    <ul class="nav nav-tabs" data-tabs="tabs" id="myTab">
        <li class="active"><a data-toggle="tab" href="#SendPackage">Send Package</a></li>
        <li><a data-toggle="tab" href="#ViewPackageInfo">View Package Info</a></li>
    </ul>

    <h2>Welcome @Session["Name"] @Session["Surname"]</h2>
    <br /><br />

    <div class="tab-content">
        <div id="SendPackage" class="tab-pane fade in active">
            <div class="container">
                @using (Html.BeginForm("DealershipView", "Users", FormMethod.Post))
                {
                    <fieldset>
                        <div class="form-group">

                            @Html.LabelFor(a => a.viewModel.DealershipName, "Dealership Name", new { @class = "col-md-3 control-label" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(a => a.viewModel.DealershipName, new SelectList(Model.viewModel.list), "Select your Dealership")
                            </div>
                        </div>
                        <br /><br />

                        <div class="form-group">
                            
                            @Html.LabelFor(a => a.viewModel.deliveryChoice, "Delivery Choice", new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">

                                @Html.DropDownListFor(a => a.viewModel.deliveryChoice, new List<SelectListItem>
                                        {
                                            new SelectListItem { Text="Courier Company", Value = "Courier"},
                                            new SelectListItem { Text="Physical Driver", Value = "Driver"},
                                        }, "---Select one---", new { onchange = "this.form.submit()" }).


                            </div>
                        </div>
                        <br /><br />

                        @if (Model.viewModel.deliveryChoice != null && Model.viewModel.deliveryChoice.Equals("Courier"))
                        {
                            <div class="form-group">
                                @Html.LabelFor(a => a.viewModel.PackageNumber, "Waybill Number", new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(a => a.viewModel.PackageNumber)
                                </div>
                            </div>
                            <br /><br />
                        }

                        else if (Model.viewModel.deliveryChoice != null && Model.viewModel.deliveryChoice.Equals("Driver"))
                        {
                            <div class="form-group">
                                @Html.LabelFor(a => a.viewModel.DriversName, "Driver Details", new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(a => a.viewModel.DriversName)
                                </div>
                            </div>
                            <br /><br />

                            <div class="form-group">
                                @Html.LabelFor(a => a.viewModel.DriverContacts, "Driver Contacts", new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(a => a.viewModel.DriverContacts)
                                </div>
                            </div>
                            <br /><br />
                        }

                        <div class="form-group">
                            @Html.LabelFor(a => a.viewModel.Comment, "Comment", new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextAreaFor(a => a.viewModel.Comment)
                            </div>
                        </div>

                        <br /><br />
                        <button class="btn btn-large btn-primary" type="submit">Send</button>

                    </fieldset>


                                }
            </div>
        </div>

        <div id="ViewPackageInfo" class="tab-pane fade in">
            <div class="container">
                @if (Model.deliveryModel != null)
                {
                <table>
                    <tr>
                        <th>Dealership Name</th>
                        <th>Waybill Number</th>
                        <th>Package Quantity</th>
                        <th>Package Sender</th>
                        <th>Date Sent</th>
                        <th>Package Recipient</th>
                        <th>Date received</th>
                        <th>Delivery Status</th>
                        <th>Comment</th>
                    </tr>

                    @foreach (var deliveryInfo in Model.deliveryModel)
                        {
                            if (deliveryInfo.DeliveryChoice == "Courier")
                            {
                    <tr>
                        <td>@deliveryInfo.DealershipName</td>
                        <th>@deliveryInfo.PackageNumber</th>
                        <td>@deliveryInfo.Quantity</td>
                        <td>@deliveryInfo.PackageSender</td>
                        <td>@deliveryInfo.DateSent</td>
                        <td>@deliveryInfo.PackageRecipient</td>
                        <td>@deliveryInfo.DateReceived</td>
                        <td>@deliveryInfo.CourierStatus</td>
                        <td>@deliveryInfo.Comment</td>
                    </tr>
                            }
                        }

                </table>
                }

                <br /><br />

                @if (Model.deliveryModel != null)
                {
                <table>
                    <tr>
                        <th>Dealership Name</th>
                        <th>Driver Details</th>
                        <th>Driver Contacts</th>
                        <th>Package Quantity</th>
                        <th>Package Sender</th>
                        <th>Date Sent</th>
                        <th>Package Recipient</th>
                        <th>Date received</th>
                        <th>Delivery Status</th>
                        <th>Comment</th>
                    </tr>

                    @foreach (var deliveryInfo in Model.deliveryModel)
                        {
                            if (deliveryInfo.DeliveryChoice == "Driver")
                            {
                    <tr>
                        <td>@deliveryInfo.DealershipName</td>
                        <td>@deliveryInfo.DriverDetails</td>
                        <td>@deliveryInfo.DriverCantact</td>
                        <td>@deliveryInfo.Quantity</td>
                        <td>@deliveryInfo.PackageSender</td>
                        <td>@deliveryInfo.DateSent</td>
                        <td>@deliveryInfo.PackageRecipient</td>
                        <td>@deliveryInfo.DateReceived</td>
                        <td>@deliveryInfo.CourierStatus</td>
                        <td>@deliveryInfo.Comment</td>
                    </tr>
                            }
                        }

                </table>
                }
            </div>
        </div>
    </div>



</body>

</html>