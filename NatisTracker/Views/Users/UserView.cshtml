@model NatisTracker.ViewModels.MasterViewModel

<!DOCTYPE html>
@{
    ViewBag.Title = "UserView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<script type="text/javascript">
    $(function () {
        $('.date-picker').datepicker();
    });


</script>

<html lang="en">
<head>
    <meta charset="utf-8">
    <title>User View &middot; FindMy Natis</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">


    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

    <link rel="stylesheet" href="/resources/demos/style.css">

    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>

    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <!-- Le styles -->

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style type="text/css">
        ul {
            list-style-type: none;
        }

        #myTab ul {
            display: none;
        }

        #myTab li:hover > ul {
            display: block;
        }

        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>


    <link href="~/Content/bootstrap-responsive.css" rel="stylesheet" />

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="../assets/js/html5shiv.js"></script>
    <![endif]-->
    <!-- Fav and touch icons -->
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="icon/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="icon/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="icon/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="icon/apple-touch-icon-57-precomposed.png">
    <link rel="shortcut icon" href="icon/favicon.png">
</head>

<body>

    <ul class="nav nav-tabs" data-tabs="tabs" id="myTab">
        <li class="active"><a data-toggle="tab" href="#Menu">Menu</a></li>
        <li><a data-toggle="tab" href="#ViewRequests">View Requests</a></li>
        <li><a data-toggle="tab" href="#Search">Search Natis</a></li>
        <li>
            <a>View Department</a>
            <ul class="nav nav-collapse" data-tabs="tabs" id="mySubTab">
                <li><a data-toggle="tab" href="#Maturities">Maturities</a></li>
                <li><a data-toggle="tab" href="#Legal">Legal</a></li>
                <li><a data-toggle="tab" href="#Call_Centre">Call Centre</a></li>
            </ul>
        </li>
    </ul>

    <h2>Welcome @Session["Name"] @Session["Surname"]</h2>
    <br /><br />

    <div class="tab-content">
        <div id="Menu" class="tab-pane fade in active">
            <div class="container">
                <ul class="list-group">
                    <li class="left"> <a href="@Url.Action("RequestNatis", "Process")" class="btn btn-default btn-block">Send Request</a></li>
                    <li class="list-group-item"> <a href="@Url.Action("Scan_To_Collect", "Process")" class="btn btn-default btn-block">SCAN to Collect</a></li>
                </ul>

            </div>
        </div>

        <div id="ViewRequests" class="tab-pane fade in">
            <div class="container">
                <table>
                    <tr>
                        <th>Request Status</th>
                        <th>Request Date</th>
                        <th>Contract Number</th>
                        <th>Reply Date</th>
                        <th>Responder Name</th>
                    </tr>
                    @if (Model.RequestViewModel != null)
                    {
                        foreach (var Requests in Model.RequestViewModel)
                        {
                    <tr>
                        <td>@Requests.RequestStatus</td>
                        <td>@Requests.RequestDate </td>
                        <td>@Requests.ContractNo</td>
                        <td>@Requests.ReplyDate</td>
                        <td>@Requests.Responder</td>
                    </tr>
                        }
                    }
                </table>
            </div>
        </div>

        <div id="Search" class="tab-pane fade in">
            <div class="container">
                @using (Html.BeginForm("UserView", "Users", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                <div class="form-group">

                    @Html.LabelFor(a => a.viewModel.contractNo, "Search Natis", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(a => a.viewModel.contractNo)
                    </div>
                </div>
                <br />
                <button class="btn btn-large btn-primary" type="submit">Search</button>

                <br /><br />

                    if (Model.natisDataViewModel != null)
                    {
                <table>
                    <tr>
                        <th>VIN Number</th>
                        <th>Registration Number</th>
                        <th>Engine Number</th>
                        <th>Car Make</th>
                        <th>Series Number</th>
                        <th>Description</th>
                        <th>Registration Date</th>
                        <th>Owner name</th>
                        <th>Owner ID</th>
                        <th>Natis Location</th>
                    </tr>
                    @foreach (var item in Model.natisDataViewModel)
                            {
                            <tr>
                                <td>@item.VinNumber</td>
                                <td>@item.RegistrationNumber</td>
                                <td>@item.EngineNumber</td>
                                <td>@item.CarMake</td>
                                <td>@item.SeriesNumber</td>
                                <td>@item.Description</td>
                                <td>@item.RegistrationDate</td>
                                <td>@item.OwnerName</td>
                                <td>@item.OwnerIdentityNumber</td>
                                <td>@item.NatisLocation</td>
                            </tr>
                            }
                </table>
                    }
                }
            </div>
        </div>

        <div id="Maturities" class="tab-pane fade in">
            <div class="container">
                <h3>Here</h3>
                @if (Model.maturitiesViewModel != null)
                {
                <table>
                    <tr>
                        <th>VIN Number</th>
                        <th>Registration Number</th>
                        <th>Engine Number</th>
                        <th>Car Make</th>
                        <th>Series Number</th>
                        <th>Description</th>
                        <th>Registration Date</th>
                        <th>Owner name</th>
                        <th>Owner ID</th>
                        <th>Natis Location</th>
                    </tr>
                    @foreach (var item in Model.maturitiesViewModel)
                        {
                        <tr>
                            <td>@item.VinNumber</td>
                            <td>@item.RegistrationNumber</td>
                            <td>@item.EngineNumber</td>
                            <td>@item.CarMake</td>
                            <td>@item.SeriesNumber</td>
                            <td>@item.Description</td>
                            <td>@item.RegistrationDate</td>
                            <td>@item.OwnerName</td>
                            <td>@item.OwnerIdentityNumber</td>
                            <td>@item.NatisLocation</td>
                        </tr>
                        }
                </table>
                }

            </div>
        </div>

        <div id="Legal" class="tab-pane fade in">
            <div class="container">
                <h3>here</h3>
                @if (Model.legalViewModel != null)
                {
                <table>
                    <tr>
                        <th>VIN Number</th>
                        <th>Registration Number</th>
                        <th>Engine Number</th>
                        <th>Car Make</th>
                        <th>Series Number</th>
                        <th>Description</th>
                        <th>Registration Date</th>
                        <th>Owner name</th>
                        <th>Owner ID</th>
                        <th>Natis Location</th>
                    </tr>
                    @foreach (var item in Model.legalViewModel)
                        {
                        <tr>
                            <td>@item.VinNumber</td>
                            <td>@item.RegistrationNumber</td>
                            <td>@item.EngineNumber</td>
                            <td>@item.CarMake</td>
                            <td>@item.SeriesNumber</td>
                            <td>@item.Description</td>
                            <td>@item.RegistrationDate</td>
                            <td>@item.OwnerName</td>
                            <td>@item.OwnerIdentityNumber</td>
                            <td>@item.NatisLocation</td>
                        </tr>
                        }
                </table>
                }

            </div>
        </div>

        <div id="Call_Centre" class="tab-pane fade in">
            <div class="container">
                @if (Model.callCentreViewModel != null)
                {
                <table>
                    <tr>
                        <th>VIN Number</th>
                        <th>Registration Number</th>
                        <th>Engine Number</th>
                        <th>Car Make</th>
                        <th>Series Number</th>
                        <th>Description</th>
                        <th>Registration Date</th>
                        <th>Owner name</th>
                        <th>Owner ID</th>
                        <th>Natis Location</th>
                    </tr>
                    @foreach (var item in Model.callCentreViewModel)
                        {
                        <tr>
                            <td>@item.VinNumber</td>
                            <td>@item.RegistrationNumber</td>
                            <td>@item.EngineNumber</td>
                            <td>@item.CarMake</td>
                            <td>@item.SeriesNumber</td>
                            <td>@item.Description</td>
                            <td>@item.RegistrationDate</td>
                            <td>@item.OwnerName</td>
                            <td>@item.OwnerIdentityNumber</td>
                            <td>@item.NatisLocation</td>
                        </tr>
                        }
                </table>
                }

            </div>
        </div>

    </div>


</body>

</html>