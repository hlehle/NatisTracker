<!DOCTYPE html>
@model NatisTracker.Models.Employee_Table

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Sign In";
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Sign in &middot; FindMy Natis Application</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <style>
        .container {
            height: 100%;
            padding: 0;
            margin: auto;
            width: 50%;
        }
    </style>

</head>

<body>

    <div class="container">

        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            <fieldset>
                <h3 class="form-signin-heading">Please Log in</h3>

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                @if (@ViewBag.Message != null)
                {
                    <div style="border :1px solid red">
                        @ViewBag.Message
                    </div>
                }

                <form class="form-signin">

                    @Html.LabelFor(a => a.UserName, "User Name")
                    @Html.TextBoxFor(a => a.UserName)
                    @Html.ValidationMessageFor(a => a.UserName)

                    @Html.LabelFor(a => a.Password, "Password")
                    @Html.PasswordFor(a => a.Password)
                    @Html.ValidationMessageFor(a => a.Password)

                    @ViewBag.Message

                    <label class="checkbox">
                        <input type="checkbox" value="remember-me"> Remember me
                    </label>
                    <button class="btn btn-large btn-primary" type="submit">Sign in</button>

                </form>

            </fieldset>
        }
    </div>

</body>
</html>
