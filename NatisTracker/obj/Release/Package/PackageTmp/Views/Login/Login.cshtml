<!DOCTYPE html>
@model NatisTracker.Models.EmployeeData

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Sign In";
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Sign in &middot; FindMy Natis Application</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="~/Content/login.css" rel="stylesheet" />

</head>

<body>
    <div class="limiter">
        <div class="container-login100">

            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
            {
                <fieldset class="wrap-login100">
                    <br />

                    <div class="login100-form-title" style="background-image: url(../../img/Login7.jpg);margin:10px">
                        <span class="login100-form-title-1">
                            Sign In
                        </span>
                    </div>

                    <br /><br />
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <form class="validate-form">
                        <div class="validate-input">
                            @Html.LabelFor(a => a.UserName, "Username", new { @class = "col-md-2" })
                            @Html.TextBoxFor(a => a.UserName, new { @placeholder = "Enter Username", @class = "col-md=10", @style = "width:100%" })
                            
                            @Html.ValidationMessageFor(a => a.UserName)
                        </div>
                        <br />
                        <div class="form-group form-group-lg validate-input">
                            @Html.LabelFor(a => a.Password, "Password", new { @class = "col-md-2" })
                            @Html.PasswordFor(a => a.Password, new { @placeholder = "Enter Password", @class = "input-lg col-md=10", @style="width:100%"})
                            @Html.ValidationMessageFor(a => a.Password)
                        </div>

                        @ViewBag.Message
                        <br />
                        <label class="checkbox">
                            <input type="checkbox" value="remember-me"> Remember me
                        </label>
                        <br />
                        <button class="btn btn-large btn-primary" type="submit">Sign in</button>

                    </form>

                </fieldset>
            }
        </div>
    </div>

</body>
</html>
