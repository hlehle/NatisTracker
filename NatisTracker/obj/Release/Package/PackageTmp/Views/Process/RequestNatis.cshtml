@model NatisTracker.ViewModels.NatisRequests
@{
    ViewBag.Title = "RequestNatis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <title>User View &middot; FindMy Natis</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <style type="text/css">
        ul {
            list-style-type: none;
        }

        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }

        .container {
            height: 100%;
            padding: 5px 5px 5px 5px;
            margin-left: 1%;
            margin-right: 1%;
            width: 98%;
        }
    </style>
</head>

<body>


    @using (Html.BeginForm("RequestNatis", "Process", FormMethod.Post))
            {
        <br /><br />
        <div class="container">
            <div class="tab-content">

                <fieldset>


                    <div class="form-group">

                        @Html.LabelFor(a => a.contractNo, "Enter Contract Number", new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(a => a.contractNo)
                        </div>
                    </div>
                    <button class="btn btn-large btn-primary" type="submit">Request</button>
                    <p align="right">

                        @Html.ActionLink("Back to previous page", "UserView", "Users", null, null)
                    </p>
                </fieldset>
            </div>
        </div>

        if (ViewBag.Stored != null)
        {
            Response.Write("<script LANGUAGE='JavaScript' >alert('Document Requested')</script>");
        }
    }

</body>

</html>