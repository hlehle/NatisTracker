@model NatisTracker.ViewModels.MasterViewModel

<!DOCTYPE html>
@{
    ViewBag.Title = "Collect";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Collect &middot; FindMy Natis</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <style type="text/css">
        .container {
            height: 100%;
            padding: 5px 5px 5px 5px;
            margin-left: 1%;
            margin-right: 1%;
            width: 98%;
        }

        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }

    </style>

</head>

<body>

    <div class="container">
        <div class="tab-content">
            <div id="Menu" class="tab-pane fade in active">

                @using (Html.BeginForm("Scan_To_Collect", "Process", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    if (Model.logInfo.contractNo != null)
                    {
                        <div class="table-responsive table table-striped">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Contract Number</th>
                                        <th>VIN Number</th>
                                        <th>Date Scanned</th>
                                        <th>User</th>
                                        <th>Natis Location</th>
                                        <th>Contract Status</th>
                                        <th>Comment</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@Model.logInfo.contractNo</td>
                                        <td>@Model.logInfo.VIN</td>
                                        <td>@Model.logInfo.Date</td>
                                        <td>@Model.logInfo.user</td>
                                        <td>@Model.logInfo.department</td>
                                        <td>@Model.logInfo.status</td>
                                        <td>@Model.logInfo.comment</td>
                                    </tr>
                                </tbody>


                            </table>
                        </div>
                    }
                    <br /><br />
                    @Html.TextBoxFor(model => model.logInfo.file, new { type = "file", id = "File", accept = "image/bmp", capture = "camera" })<br>

                    <br /><br />
                            <div class="form-group">

                                @Html.LabelFor(model => model.logInfo.comment, "Comment", new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.logInfo.comment)
                                </div>
                            </div>

                            <br /><br>
                            <button class="btn btn-large btn-primary" type="submit">Scan</button>

                            <p align="right">

                                @Html.ActionLink("Back to previous page", "UserView", "Users", null, null)
                            </p>
                }
            </div>
        </div>
    </div>


</body>

</html>