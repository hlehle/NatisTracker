
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - FindMY Natis Application</title>

    <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-responsive.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.16/datatables.min.css" />

    @RenderSection("scripts", required: false)

    <style>
        .container {
            height: 100%;
            padding: 5px 5px 5px 5px;
            margin: auto;
            width: 50%;
        }

        ul {
            list-style-type: none;
            padding: 0 0;
            margin: auto;
            
        }
    </style>



</head>

<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <img class="navbar-brand" src="~/fonts/logo2.png" />
                @Html.ActionLink("FindMY Natis", "Login", "Login", new { area = "" }, new { @class = "navbar-brand" })

            </div>

            @if (Session["Name"] != null)
            {
                <h5 class="navbar-text navbar-right" style="margin: 10px 10px 0px 20px">Welcome @Session["Name"] @Session["Surname"]</h5>
            }

            <div class="collapse navbar-collapse" >
                @if (Session["Name"] != null)
                {
                    <ul class="navbar-nav navbar-right" >
                        <li>@Html.ActionLink(" LogOut ", "LogOut", "Login", new { area = "" }, new { @class = "glyphicon glyphicon-log-out" , @style = "margin: 0px 20px 0px 35px" })</li>
                    </ul>
                }

                <ul class="navbar-nav navbar-right" style="margin: 0px 10px 0px 10px">
                    <li>@Html.ActionLink(" About ", "Login", "Login", new { area = "" }, new { @class = "glyphicon glyphicon-info-sign", @style = "margin: 0px 10px 0px 10px" })</li>
                    <li>@Html.ActionLink(" Contact ", "Login", "Login", new { area = "" }, new { @class = "glyphicon glyphicon-earphone", @style = "margin: 0px 10px 0px 10px" })</li>
                </ul>


            </div>

        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mercedes-Benz South Africa</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <script src="~/Scripts/moment.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.16/datatables.min.js"></script>

    @*<script src="~/Scripts/jquery-1.12.4.min.js"></script>*@
    <script src="~/Scripts/jquery-ui-1.12.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/MicrosoftAjax.js"></script>
    <script src="~/Scripts/MicrosoftMvcAjax.js"></script>



  

</body>
</html>