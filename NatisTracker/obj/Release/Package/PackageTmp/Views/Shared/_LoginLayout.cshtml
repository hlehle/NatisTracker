
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - FindMY Natis Application</title>

    <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-responsive.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.16/datatables.min.css" />

    @RenderSection("scripts", required: false)

   <style> 
        .container {
            position: relative;
            height: 100%;
            /*padding: 5px 5px 5px 5px;*/
            width: 50%;
        }

        .box {
            position: relative;
        }

        .box-MBFS-logo {
            left: 0%;
            margin: 5px 5px 5px 5px;
            /*border-style: dashed;
            border-width: 2px;
            border-color: red;*/
        }

        .box-ENatis-logo {
            right: 2%;
            margin: 20px 0px 20px 0px;
            padding: 2px 20px 2px 30px;
        }

        .box-toggle {
            right: 5%;
        }

        ul {
            list-style-type: none;
            padding: 0 0;
            margin: auto;
        }
    </style>

</head>

<body style="background-color:#2b2a2a">

    <div class="navbar navbar-inverse navbar-fixed-top" align="justify" @*style="width:50%"*@>
        <div class="container">
            <div class="navbar-header" style="margin:5px">
                <div class="navbar-header box-toggle" style="margin:auto">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#MyCollapsed">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                <div class="box box-MBFS-logo">
                    <img src="~/img/logo2.png" style="vertical-align:middle; height:50px; width: 50px;" />
                    <span style="font-family:CorpoA;color:white;font-size:20px">
                        Mercedes-Benz Financial Services
                    </span>
                </div>
            </div>

            <div class="navbar-nav navbar-right box box-ENatis-logo">
                <span style="font-family:CorpoA;color:white;font-size:20px">
                    FindMY Natis
                </span>
                @*<img src="~/img/eNatis.jpg" style="vertical-align:middle;" />*@
            </div>

            <div class="collapse navbar-collapse box box-toggle" id="MyCollapsed">
                <ul class="navbar-nav navbar-right" style="margin: 2px 10px 2px 10px;padding: 2px 10px 2px 10px">
                    <li>@Html.ActionLink(" About ", "Login", "Login", new { area = "" }, new { @class = "glyphicon glyphicon-info-sign", @style = "margin: 0px 10px 0px 30px" })</li>
                    <li>@Html.ActionLink(" Contact ", "Login", "Login", new { area = "" }, new { @class = "glyphicon glyphicon-earphone", @style = "margin: 0px 10px 0px 30px" })</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="font-family:CorpoA;color:white">&copy; @DateTime.Now.Year - Mercedes-Benz South Africa</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <script src="~/Scripts/moment.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.16/datatables.min.js"></script>

    <script src="~/Scripts/jquery-ui-1.12.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/MicrosoftAjax.js"></script>
    <script src="~/Scripts/MicrosoftMvcAjax.js"></script>

</body>

</html>