@model NatisTracker.ViewModels.MasterViewModel

<!DOCTYPE html>
@{
    ViewBag.Title = "UserView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<html lang="en">
<head>
    <meta charset="utf-8">
    <title>User View &middot; FindMy Natis</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <style type="text/css">
        ul {
            list-style-type: none;
        }

        #myTab ul {
            display: none;
        }

        #myTab li:hover > ul {
            display: block;
        }

        .container {
            height: 100%;
            padding: 5px 5px 5px 5px;
            margin-left: 1%;
            margin-right: 1%;
            width: 98%;
        }
    </style>

</head>

<body>

    <ul class="nav nav-tabs nav-pills" data-tabs="tabs" id="myTab">
        <li class="active"><a data-toggle="tab" href="#Menu">Menu</a></li>
        <li><a data-toggle="tab" href="#ViewRequests">View Requests</a></li>
        <li><a data-toggle="tab" href="#Search">Search Natis</a></li>
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown">View Department<span class="caret"></span></a>
            <ul class="dropdown-menu" data-tabs="tabs" id="mySubTab">
                <li><a data-toggle="tab" href="#Maturities">Maturities</a></li>
                <li><a data-toggle="tab" href="#Legal">Legal</a></li>
                <li><a data-toggle="tab" href="#Call_Centre">Call Centre</a></li>
            </ul>
        </li>
        <li><a data-toggle="tab" href="#Send">Send Natis</a></li>
    </ul>

    <div class="tab-content">
        <div id="Menu" class="tab-pane fade in active">
            <div class="container">
                <ul class="list-item">
                    <li class="list-group-item"> <a href="@Url.Action("RequestNatis", "Process")" class="btn btn-default btn-block">Send Request</a></li>
                    <li class="list-group-item"> <a href="@Url.Action("Scan_To_Collect", "Process")" class="btn btn-default btn-block">SCAN to Collect</a></li>
                </ul>

            </div>
        </div>

        <div id="ViewRequests" class="tab-pane fade in">
            <div class="container">
                <div class="table-responsive table table-striped">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Request Status</th>
                                <th>Request Date</th>
                                <th>Contract Number</th>
                                <th>Reply Date</th>
                                <th>Responder Name</th>
                            </tr>
                        </thead>
                        @if (Model.RequestViewModel != null)
                        {
                            foreach (var Requests in Model.RequestViewModel)
                            {
                                <tbody>
                                    <tr>
                                        <td>@Requests.RequestStatus</td>
                                        <td>@Requests.RequestDate </td>
                                        <td>@Requests.ContractNo</td>
                                        <td>@Requests.ReplyDate</td>
                                        <td>@Requests.Responder</td>
                                    </tr>
                                </tbody>
                            }
                        }
                    </table>
                </div>
            </div>
        </div>

        <div id="Search" class="tab-pane fade in">
            <div class="container">
                @using (Html.BeginForm("UserView", "Users", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group">

                        @Html.LabelFor(a => a.viewModel.contractNo, "Search Natis", new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(a => a.viewModel.contractNo)
                        </div>
                    </div>
                    <br />
                    <button class="btn btn-large btn-primary" type="submit">Search</button>

                    <br /><br />

                    if (Model.natisDataViewModel != null)
                    {
                        <div class="table-responsive table table-striped">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>VIN Number</th>
                                        <th>Registration Number</th>
                                        <th>Engine Number</th>
                                        <th>Car Make</th>
                                        <th>Series Number</th>
                                        <th>Description</th>
                                        <th>Registration Date</th>
                                        <th>Owner name</th>
                                        <th>Owner ID</th>
                                        <th>Natis Location</th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model.natisDataViewModel)
                                {
                                    <tbody>
                                        <tr>
                                            <td>@item.VinNumber</td>
                                            <td>@item.RegistrationNumber</td>
                                            <td>@item.EngineNumber</td>
                                            <td>@item.CarMake</td>
                                            <td>@item.SeriesNumber</td>
                                            <td>@item.Description</td>
                                            <td>@item.RegistrationDate</td>
                                            <td>@item.OwnerName</td>
                                            <td>@item.OwnerIdentityNumber</td>
                                            <td>@item.NatisLocation</td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>
                    }
                }
            </div>
        </div>

        <div id="Maturities" class="tab-pane fade in">
            <div class="container">
                @if (Model.maturitiesViewModel != null)
                {
                    <div class="table-responsive table table-striped">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>VIN Number</th>
                                    <th>Registration Number</th>
                                    <th>Engine Number</th>
                                    <th>Car Make</th>
                                    <th>Series Number</th>
                                    <th>Description</th>
                                    <th>Registration Date</th>
                                    <th>Owner name</th>
                                    <th>Owner ID</th>
                                    <th>Natis Location</th>
                                </tr>
                            </thead>
                            @foreach (var item in Model.maturitiesViewModel)
                            {
                                <tbody>
                                    <tr>
                                        <td>@item.VinNumber</td>
                                        <td>@item.RegistrationNumber</td>
                                        <td>@item.EngineNumber</td>
                                        <td>@item.CarMake</td>
                                        <td>@item.SeriesNumber</td>
                                        <td>@item.Description</td>
                                        <td>@item.RegistrationDate</td>
                                        <td>@item.OwnerName</td>
                                        <td>@item.OwnerIdentityNumber</td>
                                        <td>@item.NatisLocation</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                }

            </div>
        </div>

        <div id="Legal" class="tab-pane fade in">
            <div class="container">

                @if (Model.legalViewModel != null)
                {
                    <div class="table-responsive table table-striped">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>VIN Number</th>
                                    <th>Registration Number</th>
                                    <th>Engine Number</th>
                                    <th>Car Make</th>
                                    <th>Series Number</th>
                                    <th>Description</th>
                                    <th>Registration Date</th>
                                    <th>Owner name</th>
                                    <th>Owner ID</th>
                                    <th>Natis Location</th>
                                </tr>
                            </thead>
                            @foreach (var item in Model.legalViewModel)
                            {
                                <tbody>
                                    <tr>
                                        <td>@item.VinNumber</td>
                                        <td>@item.RegistrationNumber</td>
                                        <td>@item.EngineNumber</td>
                                        <td>@item.CarMake</td>
                                        <td>@item.SeriesNumber</td>
                                        <td>@item.Description</td>
                                        <td>@item.RegistrationDate</td>
                                        <td>@item.OwnerName</td>
                                        <td>@item.OwnerIdentityNumber</td>
                                        <td>@item.NatisLocation</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                }

            </div>
        </div>

        <div id="Call_Centre" class="tab-pane fade in">
            <div class="container">
                @if (Model.callCentreViewModel != null)
                {
                    <div class="table-responsive table table-striped">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>VIN Number</th>
                                    <th>Registration Number</th>
                                    <th>Engine Number</th>
                                    <th>Car Make</th>
                                    <th>Series Number</th>
                                    <th>Description</th>
                                    <th>Registration Date</th>
                                    <th>Owner name</th>
                                    <th>Owner ID</th>
                                    <th>Natis Location</th>
                                </tr>
                            </thead>
                            @foreach (var item in Model.callCentreViewModel)
                            {
                                <tbody>
                                    <tr>

                                        <td>@item.VinNumber</td>
                                        <td>@item.RegistrationNumber</td>
                                        <td>@item.EngineNumber</td>
                                        <td>@item.CarMake</td>
                                        <td>@item.SeriesNumber</td>
                                        <td>@item.Description</td>
                                        <td>@item.RegistrationDate</td>
                                        <td>@item.OwnerName</td>
                                        <td>@item.OwnerIdentityNumber</td>
                                        <td>@item.NatisLocation</td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                }

            </div>
        </div>

        <div id="Send" class="tab-pane fade in">

            @using (Html.BeginForm("UserView", "Users", FormMethod.Post))
            {
            <fieldset>

                <div class="form-group">
                    @Html.LabelFor(a => a.viewModel.contractNo, "Contract Number", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(a => a.viewModel.contractNo)
                    </div>
                </div>

                <div class="form-group">

                    @Html.LabelFor(a => a.viewModel.deliveryChoice, "Delivery Choice", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">

                        @Html.DropDownListFor(a => a.viewModel.deliveryChoice, new List<SelectListItem>
                                        {
                                            new SelectListItem { Text="Courier Company", Value = "Courier"},
                                            new SelectListItem { Text="Physical Driver", Value = "Driver"},
                                        }, "---Select one---", new { onchange = "this.form.submit()" })


                    </div>
                </div>
                <br /><br />

                @if (Model.viewModel.deliveryChoice != null && Model.viewModel.deliveryChoice.Equals("Courier"))
                    {
                    <div class="form-group">
                        @Html.LabelFor(a => a.viewModel.PackageNumber, "Waybill Number", new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(a => a.viewModel.PackageNumber)
                        </div>
                    </div>
                    <br /><br />
                    }

                    else if (Model.viewModel.deliveryChoice != null && Model.viewModel.deliveryChoice.Equals("Driver"))
                    {
                    <div class="form-group">
                        @Html.LabelFor(a => a.viewModel.DriversName, "Driver Details", new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(a => a.viewModel.DriversName)
                        </div>
                    </div>
                    <br /><br />

                    <div class="form-group">
                        @Html.LabelFor(a => a.viewModel.DriverContacts, "Driver Contacts", new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(a => a.viewModel.DriverContacts)
                        </div>
                    </div>
                    <br /><br />
                    }

                <div class="form-group">
                    @Html.LabelFor(a => a.viewModel.Recipient_Name, "Recipient Name", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(a => a.viewModel.Recipient_Name)
                    </div>
                </div>
                <br /><br />

                <div class="form-group">
                    @Html.LabelFor(a => a.viewModel.Recipient_Contacts, "Recipient Contacts", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(a => a.viewModel.Recipient_Contacts)
                    </div>
                </div>
                <br /><br />



                <div class="form-group">
                    @Html.LabelFor(a => a.viewModel.Comment, "Comment", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(a => a.viewModel.Comment)
                    </div>
                </div>

                <br /><br />
                <button class="btn btn-large btn-primary" type="submit">Send</button>

            </fieldset>


            }


        </div>
    </div>




</body>

</html>